<resources>

    <!-- Style for RoundedTextInputLayout -->
    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Strings for the app -->
    <string name="app_name">Mobile Apps</string>
    <string name="email_hint">Email</string>
    <string name="password_hint">Password</string>
    <string name="login_button">Login</string>
    <string name="new_member_text">New Member? Register Here</string>

    <!-- Style for RoundedMaterialButton -->
    <style name="RoundedMaterialButton"></style>

</resources>
